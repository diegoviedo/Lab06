<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<display-name>Trabajo1 con AJAX</display-name>
  <servlet>
    <servlet-name>ActionServlet</servlet-name>
    <servlet-class>pw2.ActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionServlet</servlet-name>
    <url-pattern>/actionServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>RegisterUser</servlet-name>
    <servlet-class>controller.RegisterUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterUser</servlet-name>
    <url-pattern>/registerUser</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>RegisterPermiso</servlet-name>
    <servlet-class>controller.RegisterPermiso</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterPermiso</servlet-name>
    <url-pattern>/registerPermiso</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>